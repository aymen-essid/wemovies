{% extends 'home/index.html.twig' %}

{% block title %}Films By Gender{% endblock %}



{% block vertivalMenu %}
    <div class="col-4">
        <div id="menu-block">
            <div class="d-grid gap-2 col-6 mx-auto">
            {% for gender in genders %}
                <button class="btn btn-primary gender-button" value="{{ path('app_ajax_films_by_gender', { 'gender': gender.id })}}">{{ gender.name }}</button>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block listing %}
    
    <div class="col-8">
        <div id="films-list">
            {% include "home/pages/blocks/film.html.twig" %}
        </div>
    </div>

{% endblock %}
